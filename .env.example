# ============================================
# GLOBAL ENVIRONMENT VARIABLES
# ============================================
# Environment
NODE_ENV=development

# ============================================
# API SERVICE (apps/api)
# ============================================
# Server
API_PORT=3001
API_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/medasset_dev

# Redis
REDIS_URL=redis://localhost:6379

# Search
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=masterKey

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.medasset.com

# AWS/Azure (for file storage)
AWS_REGION=us-east-1
AWS_S3_BUCKET=medasset-assets-dev
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ML Service
ML_SERVICE_URL=http://localhost:8000

# ============================================
# WEB APP (apps/web)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_AUTH0_DOMAIN=your-auth0-domain.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.medasset.com

# ============================================
# MOBILE APP (apps/mobile)
# ============================================
# Android Emulator uses 10.0.2.2 to access host machine
# iOS Simulator uses localhost
EXPO_PUBLIC_API_URL=http://10.0.2.2:3001/api

# ============================================
# ML SERVICE (apps/ml-service)
# ============================================
ML_PORT=8000
ML_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/medasset_dev
